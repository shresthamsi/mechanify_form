<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/new.css">
    </head>
    
    <body>
    
    <form onsubmit= "return checkMobile()" action="/Address" method="POST" class="needs-validation" novalidate >
    
    <div class="form-group col-auto">
         <label for="fullName">Full name: </label>
         <input type="text" name="fullName" id="fullName" class="form-control" required>
         <div class="invalid-feedback">Please enter your full name</div>
    </div>
    
    
    <div class="form-group col-auto">
         <label for="streetAddress">Street Address: </label>
         <input type="text" name="streetAddress" id="streetAddress" class="form-control" required>
         <div class="invalid-feedback">Please fill this field</div>
    </div>
    
    
    
    <div class="form-group col-auto">
         <label for="phone">Mobile Number:</label>
         <input type="text" name="phone" id="phone" value=" " class="form-control" required>
         <div class="invalid-feedback">Please fill this field</div>
         <span id="message" class="text-danger"></span>
    </div>
    
    
    <div class="form-row col-auto">
        <div class="col">
            <div class="form-group">
                 <label for="city">Town/City:</label>
                 <input     type="text" name="city" id="city" class="form-control" required>
                 <div class="invalid-feedback">Please fill this field</div>
            </div>
        </div>
        
        
        <div class="col">
            <div class="form-group">
                <label for="state">State: </label>
                <input list="states" type="text" name="state" id="state" class="form-control" required>
                    <datalist id="states">
                        <option value="Andhra Pradesh">
                        <option value="Arunachal Pradesh ">
                        <option value="Assam ">
                        <option value="Bihar ">
                        <option value="Chhattisgarh ">
                        <option value="Goa">
                        <option value="Gujarat">
                        <option value="Haryana">
                        <option value="Himachal Pradesh">
                        <option value="Jharkhand">
                        <option value="Karnataka">
                        <option value="Kerala ">
                        <option value="Madhya Pradesh ">
                        <option value="Maharashtra">
                        <option value="Manipur">
                        <option value="Meghalaya ">
                        <option value="Mizoram ">
                        <option value="Nagaland ">
                        <option value="Odisha ">
                        <option value="Punjab">
                        <option value="Rajasthan ">
                        <option value="Sikkim ">
                        <option value="Tamil Nadu">
                        <option value="Telangana ">
                        <option value="Tripura ">
                        <option value="Uttar Pradesh">
                        <option value="Uttarakhand">
                        <option value="West Bengal ">
                        <option value="Delhi">
                    </datalist>
                    <div class="invalid-feedback">Please fill this field</div>
            </div>            
        </div>
    </div>
    
    
    <div class="form-group col-auto">
         <label for="pincode">Pincode:</label>
         <input type="text" name="pincode" id="pincode" class="form-control" required>
         <div class="invalid-feedback">Please fill this field</div>
    </div>
    
    
    
    <div class="form-row col-auto float-right">
        <div class="col">
          <button type="submit" class="btn btn-primary">Add Address</button>
        </div>
   </div>
    
 </form>

    <script>
    
     function checkMobile(){
        var  number = document.getElementById("phone").value;
        
        if(NaN(number)){
            document.getElementById("message").innerHTML("enter a numberic value only");
            return false;
        }
        
        if(number.length < 10){
            document.getElementById("message").innerHTML("Mobile number must be of 10 digits");
            return false;
        }
        
        else if(number.length > 10){
            document.getElementById("message").innerHTML("Mobile number must be of 10 digits");
            return false;
        }
        
        else if((number.charAt(0)!=9) && (number.charAt(0)!=8) && (number.charAt(0)!=7)){
            document.getElementById("message").innerHTML("enter a valid mobile number");
            return false;  
        }
    }
    
    var form = document.querySelector(".needs-validation");
    form.addEventListener("submit", function(){
        if(form.checkValidity() === false){
            event.preventDefault();
            event.stopPropagation();
            }
        
    form.classList.add("was-validated");
    });
    
</script>  
</body>
</html>